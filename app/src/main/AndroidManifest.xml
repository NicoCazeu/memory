<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softcaze.memory">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".activity.CreditsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ShopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LevelListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChallengeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GameModeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HeaderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FooterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SplachScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BackgroundActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ContactFormActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9468199307439621~4757497614"/>
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />
    </application>
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>