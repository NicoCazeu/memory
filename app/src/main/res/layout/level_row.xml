<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/relative_1"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/primary_button">

        <RelativeLayout
            android:id="@+id/content_unlock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roof_runners_active"
                android:layout_marginBottom="10dp"
                android:textColor="@color/whiteColor"
                />

            <ImageView
                android:id="@+id/level1_star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level1"
                android:layout_toLeftOf="@id/level1_star2"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/level1_star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_below="@id/level1"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/level1_star3"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level1"
                android:baselineAlignBottom="true"
                android:layout_toRightOf="@id/level1_star2"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_lock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/level_lock"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_2"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/primary_button">

        <RelativeLayout
            android:id="@+id/content_unlock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roof_runners_active"
                android:layout_marginBottom="10dp"
                android:textColor="@color/whiteColor" />

            <ImageView
                android:id="@+id/level2_star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level2"
                android:layout_toLeftOf="@id/level2_star2"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/level2_star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_below="@id/level2"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/level2_star3"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level2"
                android:baselineAlignBottom="true"
                android:layout_toRightOf="@id/level2_star2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_lock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/level_lock"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_3"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/primary_button">

        <RelativeLayout
            android:id="@+id/content_unlock3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roof_runners_active"
                android:layout_marginBottom="10dp"
                android:textColor="@color/whiteColor" />

            <ImageView
                android:id="@+id/level3_star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level3"
                android:layout_toLeftOf="@id/level3_star2"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/level3_star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_below="@id/level3"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/level3_star3"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/level3"
                android:baselineAlignBottom="true"
                android:layout_toRightOf="@id/level3_star2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_lock3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/level_lock"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>