<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_menu"
    tools:context=".activity.MainMenuActivity">

    <include
        android:id="@+id/img_background"
        layout="@layout/activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/header"
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/footer"
        layout="@layout/activity_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/linear_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/roof_runners_active"
            android:textSize="20sp"
            android:padding="5dp"
            android:paddingRight="2dp"/>

        <ImageView
            android:id="@+id/img_coin"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@drawable/coin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/linear_coin"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/roof_runners_active"
            android:textSize="20sp"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/img_bonus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@drawable/eyes_bonus"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:background="@drawable/memory_title"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_play" />

    <!-- <ImageView
        android:id="@+id/btn_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/container_challenge"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shop_card" /> -->

    <RelativeLayout
        android:id="@+id/container_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_toStartOf="@+id/container_challenge">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/card_recto"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/ico_shop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shop"/>
            <TextView
                android:id="@+id/shop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/roof_runners_active"
                android:text="@string/main_menu_title_shop"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- <ImageView
        android:id="@+id/btn_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/challenge_card" /> -->

    <RelativeLayout
        android:id="@+id/container_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/card_recto"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/ico_medal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/medal"/>
            <TextView
                android:id="@+id/challenge_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/roof_runners_active"
                android:text="@string/main_menu_title_challenge"/>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/container_challenge"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="-15dp"
        android:layout_alignTop="@id/container_challenge">

        <ImageView
            android:id="@+id/container_notif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/container_notif"/>

        <TextView
            android:id="@+id/txt_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/roof_runners_active"
            android:layout_centerInParent="true"
            android:textColor="@color/whiteColor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_toEndOf="@+id/container_challenge">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/card_recto"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/ico_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/settings"/>
            <TextView
                android:id="@+id/setting_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/roof_runners_active"
                android:text="@string/main_menu_title_setting"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
