<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/relative_challenge"
    android:background="@drawable/unlock_challenge_background">

                <TextView
                    android:id="@+id/new_unlock_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unlock_new_challenge"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/img_trophy"
                    android:textColor="@color/whiteColor"
                    android:fontFamily="@font/roof_runners_active"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/img_trophy"
                    android:background="@drawable/trophy"
                    android:layout_marginStart="@dimen/img_trophy_margin_start"
                    android:layout_marginEnd="@dimen/img_trophy_margin_end"
                    android:layout_width="@dimen/img_trophy_size"
                    android:layout_height="@dimen/img_trophy_size"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/label_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collectez 50 etoiles"
                    android:layout_centerVertical="true"
                    android:textColor="@color/whiteColor"
                    android:layout_toRightOf="@id/img_trophy"
                    android:layout_toLeftOf="@id/relative_award"
                    android:layout_below="@+id/new_unlock_challenge"
                    android:fontFamily="@font/roof_runners_active"
                    android:textSize="@dimen/txt_challenge_size"/>

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/relative_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/rel_award_left_padding"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/count_award"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roof_runners_active"
                        android:textColor="@color/whiteColor"
                        android:text="20"
                        android:layout_marginEnd="2dp"
                        android:textSize="@dimen/txt_count_size"/>
                    <ImageView
                        android:id="@+id/img_award"
                        android:layout_width="@dimen/img_count_size"
                        android:layout_height="@dimen/img_count_size"
                        android:layout_toRightOf="@id/count_award"
                        android:layout_marginEnd="5dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/get_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/yellowColor"
                    android:fontFamily="@font/roof_runners_active"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="@string/get_award_new_challenge"/>
</RelativeLayout>